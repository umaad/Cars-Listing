<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>

<body>

    <nav>
        <a class="nav-button" href="http://localhost:3000/cars">Car List</a>
        <a class="nav-button" href="http://localhost:3000/create">Add Car</a>

    </nav>

    <div class="car-details">
        <img src="{{car.image1}}" alt="{{car.make}} {{car.model}}">
        {{#if car.image2}}
        <div>
            <img src="{{car.image2}}" alt="{{car.make}} {{car.model}}">
        </div>
        {{/if}}

        <h2>{{car.make}} {{car.model}} ({{car.year}})</h2>
        <p><strong>VIN:</strong> {{car.vin}}</p>
        <p><strong>Color:</strong> {{car.color}}</p>
        <p><strong>KM:</strong> {{car.km}}</p>
        <p><strong>Price:</strong> {{car.price}}</p> <br>


        <button class="delete-btn btn btn-danger">Delete Item</button> <br>
        <button class="edit-btn btn btn-primary">Edit Item</button> 
        <a href="http://localhost:3000/cars">Go back</a>
        <br>
        <br>

    </div>

</body>

</html>

<style>
    body {
        background-color: rgb(236, 244, 223);
    }


    .car-details {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px;
        margin-left: 20%;

    }

    .car-details img {
        max-width: 80%;
        margin-bottom: 20px;
        border-radius: 15%;
    }

    .car-details h2 {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .car-details p {
        font-size: 1.5rem;
        margin-bottom: 5px;
    }

    .car-details strong {
        font-weight: bold;
    }

    .car-details {
        max-width: 800px;
        width: 100%;
    }

    nav {
        display: flex;
        justify-content: right;
        background-color: #40a290;
        padding: 10px;
    }

    .nav-button {
        padding: 1%;
        color: aliceblue;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $('.delete-btn').click(function () {
        $.ajax({
            url: 'http://localhost:3000/cars/{{car.vin}}', // replace with your API endpoint
            type: 'DELETE',
            success: function (result) {
                console.log('Item deleted successfully');
                // add your own code to update the UI
            },
            error: function (error) {
                console.error('Error deleting item:', error);
            }
        });
        location.replace('http://localhost:3000/cars/')
    });

    $('.edit-btn').click(function () {
        
        location.replace('http://localhost:3000/cars/{{car.vin}}/edit')
    });
</script>